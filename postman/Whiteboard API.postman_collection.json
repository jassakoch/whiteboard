									"const jsonData = pm.response.json();",
									"if(jsonData.token) {",
									"    pm.environment.set(\"authToken\",jsonData.token)",
									"    console.log(\"Login successful! Token saved.\")",
									"}",
									"const userId =jsonData.user ? jsonData.user._id : jsonData.id;",
									"pm.environment.set(\"currentId\", userId);",
									"",
									"//Verify the server logged in the RIGHT person",
									"pm.test(\"Verify the server logged in the correct user\", function () {",
									"pm.expect(jsonData.user.email).to.eql(pm.environment.get(\"registeredEmail\"))",
