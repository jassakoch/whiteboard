								"exec": [
									"// Parse the response",
									"const jsonData = pm.response.json();",
									"",
									"// Save the ID of the new whiteboard to an environment variable",
									"if (jsonData._id) {",
									"    pm.environment.set(\"currentId\", jsonData._id);",
									"    console.log(\"Saved ID: \" + jsonData._id);",
									"}",
									"// This checks if the server actually saved it (Status 201 Created)",
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"// This ensures the response actually contains an ID",
									"pm.test(\"Response has a Whiteboard ID\", function () {",
									"    pm.expect(jsonData._id).to.exist;",
